@model IEnumerable<Job_Offers_Site.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}


    <div class="panel panel-default" style="padding:15px;">

        <h1 class="panel-heading" style="background-color:cornflowerblue;">Search Results</h1>
        <div class="row">
            @foreach (var subItem in Model)
            {
                <div class="col-md-3 img-thumbnail" style="margin-left:20px;
margin-bottom:30px;">
                    <img src="~/Uploads/@subItem.jobImage" class="img-thumbnail" />
                    <h3>@Html.DisplayFor(modelItem => subItem.JobTitle)</h3>
                    <h5>@Html.DisplayFor(modelItem => subItem.JobContent)</h5>
                    @Html.ActionLink("Details", "Details", new { jobId = subItem.ID }, new { @class = "btn btn-primary" })
                </div>
            }
        </div>
    </div>


