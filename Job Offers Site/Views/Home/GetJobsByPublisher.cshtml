@model IEnumerable<Job_Offers_Site.Models.JobsViewModel>

@{
    ViewBag.Title = "GetJobsByPublisher";
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
}

@foreach (var gr in Model)
{
    <h3>@gr.JobTitle</h3>
    <table class="table table-bordered table-hoover">
        <tr>
            <th>Name</th>
            <th>Message</th>
            <th>Date</th>
        </tr>
        @foreach (var item in gr.Items)
        {
            <tr>
                <td>@item.user.UserName</td>
                <td>@item.Message</td>
                <td>@item.ApplicationDate</td>
            </tr>
        }
    </table>
}
